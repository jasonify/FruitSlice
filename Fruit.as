class Fruit extends MovieClip{		//private  	private var diameter:Number;	private var mv:MovieClip;	private var gravity:Number =  -9.8/2 ;		private var initial_y:Number;	private var initial_v:Number;	private var wind:Number;		private var txt:TextField;	private var edge:Number		private var active:Boolean;		public function Fruit(name, width, vi, wind, x,y){		trace("fruit says hello");		_root.createEmptyMovieClip("fruit_"+name, _root.getNextHighestDepth());				mv = _root["fruit_"+name];		mv.loadMovie("orange.swf");		mv.txty.text = "9";		//mv.content.getChildByName('txty').text = "0";		//mv._xscale = 50;		//smv._yscale = 50;		mv._x = x;		mv._y = y;		initial_y = y;		this.initial_v = vi;		this.wind = wind;				this.diameter = width;				_root.createTextField("Heresometext"+name, _root.getNextHighestDepth(), 0, 0,200, 200);		txt = _root["Heresometext"+name];		txt.text = "5";				var emphatic:TextFormat = new TextFormat();		emphatic.bold = true;		emphatic.size = 55;		emphatic.font = "Georgia";		txt.setTextFormat(emphatic);				txt._x = mv._x + width/2;		txt._y = mv._y + width/2;		this.edge = 100; //edge around object 		this.active = true;			}			public function x(){		return mv._x;			}	public function y(){		return mv._y;	}		public function update(time){				//Vi*T + g*t^2				var distance:Number =  (initial_v*110)*(1+time) + (gravity * (1+time/10) * (1+time));		mv._y = initial_y - distance/(1000 *1.2);		mv._x+=this.wind;				txt._x = mv._x + this.diameter/3+10;		txt._y = mv._y + this.diameter/4;																																															}	public function was_sliced(){						if(!active) return false;		//_root._xmouse, _root._ymouse, fruit._x, fruit._y, 100		if(_root._xmouse >= this.x()-this.edge and _root._xmouse <= this.x()+ diameter+this.edge){			if(_root._ymouse >= this.y()-this.edge and _root._ymouse <= this.y() + diameter+this.edge){				mv.removeMovieClip();				txt.removeTextField();				this.active = false;				return true;			}		}				return false;	}	};